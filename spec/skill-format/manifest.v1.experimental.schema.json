{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Skill Manifest (v1 Experimental)",
  "description": "Non-normative draft schema for v1 compatibility planning.",
  "type": "object",
  "required": [
    "schema_version",
    "id",
    "version",
    "entrypoint",
    "artifact",
    "capabilities",
    "signers",
    "inputs_schema",
    "outputs_schema"
  ],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0.0-draft"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "entrypoint": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1
        },
        {
          "type": "object",
          "required": ["kind", "path"],
          "additionalProperties": false,
          "properties": {
            "kind": {
              "type": "string",
              "enum": ["wasi-command", "wasi-reactor"]
            },
            "path": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      ]
    },
    "artifact": {
      "type": "string",
      "pattern": "^sha256:[0-9a-f]{64}$"
    },
    "inputs_schema": {
      "oneOf": [
        {
          "type": "object"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ]
    },
    "outputs_schema": {
      "oneOf": [
        {
          "type": "object"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ]
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["kind", "value"],
        "additionalProperties": false,
        "properties": {
          "kind": {
            "type": "string",
            "minLength": 1
          },
          "value": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "signers": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "provenance": {
      "type": "object",
      "additionalProperties": true
    },
    "compatibility": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "runtime_profiles": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "adapter_profiles": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
